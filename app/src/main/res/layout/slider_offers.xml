<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   >



    <ImageView
        android:id="@+id/offerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/layerlist_drawable" />

    <TextView
        android:id="@+id/titleOffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/offerImage"
        android:layout_alignTop="@id/offerImage"
        android:layout_alignRight="@id/offerImage"
        android:layout_alignBottom="@id/offerImage"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:textSize="25dp"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/getOffTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/offerImage"
        android:layout_alignTop="@id/offerImage"
        android:layout_alignRight="@id/offerImage"
        android:layout_alignBottom="@id/offerImage"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000" />




</RelativeLayout>